<form style="float:left; padding-right:5px;" method="post" action="{{ path('app_contact_delete', {'id': contact.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="btn btn-warning"><i class="fa fa-trash"></i> Delete</button>
</form>


